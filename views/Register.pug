extends ./headers/base.pug

block content
    style.
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
        }

        .register-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }

        .register-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 900px;
            width: 100%;
        }

        .register-image {
            background:  url('./images/bus_login.jpg');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            padding: 3rem;
        }

        .register-form {
            padding: 3rem;
        }

        .brand-title {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 800;
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            background: white;
        }

        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
        }

        .btn-register {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(40, 167, 69, 0.4);
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.6);
        }

        .error-message {
            background: #fee;
            border: 1px solid #fcc;
            color: #c66;
            padding: 8px 12px;
            border-radius: 8px;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: none;
        }

        .error-message.show {
            display: block;
        }

        .link-primary {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
        }

        .link-primary:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .register-form {
                padding: 2rem;
            }
            .brand-title {
                font-size: 2rem;
            }
        }

    <div class="register-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="register-card">
                        <div class="row g-0">
                            <div class="col-lg-6 d-none d-lg-block">
                                <div class="register-image h-100">
                                    <div>
                                        <h2 class="mb-3">Join Swift Bus!</h2>
                                        <p class="lead">Create your account and start your comfortable journey</p>
                                        <div class="mt-4">
                                            <i class="fas fa-user-plus fa-3x opacity-75"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="register-form">
                                    <div class="text-center mb-4">
                                        <h1 class="brand-title">Swift Bus</h1>
                                        <p class="text-muted">Create your account</p>
                                    </div>

                                    <form>
                                        <div class="mb-3">
                                            <label class="form-label" for="username">
                                                <i class="fas fa-user me-2"></i>Full Name
                                            </label>
                                            <input type="text" id="username" class="form-control" placeholder="Enter your full name" required/>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label" for="contact-number">
                                                <i class="fas fa-phone me-2"></i>Phone Number
                                            </label>
                                            <input type="number" id="contact-number" class="form-control" placeholder="Enter your phone number" required/>
                                            <div class="error-message number-limit-hide">Number should be 10 digits</div>
                                            <div class="error-message already-used-number-hide">Number already used</div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label" for="password">
                                                <i class="fas fa-lock me-2"></i>Password
                                            </label>
                                            <input type="password" id="password" class="form-control" placeholder="Create a strong password" required/>
                                            <div class="error-message wrong-password-hide">Password does not match</div>
                                        </div>

                                        <div class="mb-4">
                                            <label class="form-label" for="password-confirm">
                                                <i class="fas fa-lock me-2"></i>Confirm Password
                                            </label>
                                            <input type="password" id="password-confirm" class="form-control" placeholder="Confirm your password" required/>
                                            <div class="error-message wrong-password-hide">Password does not match</div>
                                        </div>

                                        <div class="d-grid mb-3">
                                            <button onclick="register()" class="btn btn-register text-white" type="button">
                                                <i class="fas fa-user-plus me-2"></i>Create Account
                                            </button>
                                        </div>

                                        <div class="text-center">
                                            <p class="text-muted">Already have an account? 
                                                <a href="/login" class="link-primary">Login here</a>
                                            </p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    script(src="./js/register.js")
