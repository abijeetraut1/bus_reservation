extends ../headers/base

block content
    style.
        .admin-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        
        .action-bar {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
        }
        
        .bus-table-container {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }
        
        .table {
            margin-bottom: 0;
        }
        
        .table thead th {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border: none;
            padding: 1rem;
            font-weight: 700;
            color: #495057;
            text-transform: uppercase;
            font-size: 0.875rem;
            letter-spacing: 0.5px;
        }
        
        .table tbody td {
            padding: 1rem;
            border-color: #f1f3f4;
            vertical-align: middle;
        }
        
        .table tbody tr:hover {
            background: #f8f9fa;
        }
        
        .btn-action {
            padding: 6px 12px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.875rem;
            transition: all 0.3s ease;
            border: none;
        }
        
        .btn-edit {
            background: linear-gradient(135deg, #17a2b8 0%, #6610f2 100%);
            color: white;
        }
        
        .btn-edit:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(23, 162, 184, 0.4);
        }
        
        .btn-delete {
            background: linear-gradient(135deg, #dc3545 0%, #e83e8c 100%);
            color: white;
        }
        
        .btn-delete:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
        }
        
        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }
        
        .facility-badge {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            margin: 2px;
            display: inline-block;
        }
        
        .modal-content {
            border-radius: 16px;
            border: none;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
        }
        
        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 16px 16px 0 0;
            border: none;
        }

    <div class="admin-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-5 fw-bold mb-2">Bus Management</h1>
                    <p class="lead mb-0">Manage your fleet and assign staff members</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <i class="fas fa-bus fa-3x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="action-bar">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="fw-bold mb-0">
                    <i class="fas fa-list me-2"></i>All Buses
                </h4>
                <button class="btn btn-primary-custom" data-bs-toggle="modal" data-bs-target="#appoint">
                    <i class="fas fa-user-plus me-2"></i>Appoint Staff
                </button>
            </div>
        </div>

        <div class="bus-table-container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>S.N</th>
                        <th>Bus Details</th>
                        <th>Route</th>
                        <th>Capacity</th>
                        <th>Price</th>
                        <th>Facilities</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    each bus, i in buses
                        <tr>
                            <td class="fw-bold">#{i+1}</td>
                            <td>
                                <div>
                                    <div class="fw-bold">#{bus.busName}</div>
                                    <small class="text-muted">Bus ##{bus.busNumber}</small>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <div class="fw-semibold">#{bus.startLocation}</div>
                                    <small class="text-muted">
                                        <i class="fas fa-arrow-down me-1"></i>#{bus.endLocation}
                                    </small>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-info">#{bus.totalSeats} seats</span>
                            </td>
                            <td>
                                <span class="fw-bold text-success">NPR #{bus.ticketPrice}</span>
                            </td>
                            <td>
                                <div class="d-flex flex-wrap">
                                    if(bus.facilities)
                                        each facility in bus.facilities
                                            if(facility.value === "true")
                                                <span class="facility-badge">#{facility.name}</span>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-action btn-edit" data-bs-toggle="modal" data-bs-target="#addBus" onclick=`check('${bus.id}')`)>
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </button>
                                    <button class="btn btn-action btn-delete" onclick=`deleteData('bus/delete-bus/${bus.id}')`)>
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                </tbody>
            </table>
        </div>

        <!-- Staff Assignment Modal -->
        <div class="modal fade" id="appoint" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">
                            <i class="fas fa-user-plus me-2"></i>Appoint Staff Member
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="worker-name" class="form-label fw-semibold">Full Name</label>
                                    <input type="text" class="form-control" id="worker-name" placeholder="Enter full name">
                                </div>
                                <div class="col-md-6">
                                    <label for="worker-number" class="form-label fw-semibold">Phone Number</label>
                                    <input type="number" class="form-control" id="worker-number" placeholder="Enter phone number">
                                </div>
                                <div class="col-md-6">
                                    <label for="worker-password" class="form-label fw-semibold">Password</label>
                                    <input type="password" class="form-control" id="worker-password" placeholder="Create password">
                                </div>
                                <div class="col-md-6">
                                    <label for="worker-password-confirm" class="form-label fw-semibold">Confirm Password</label>
                                    <input type="password" class="form-control" id="worker-password-confirm" placeholder="Confirm password">
                                </div>
                                <div class="col-12">
                                    <label for="select-bus" class="form-label fw-semibold">Assign to Bus</label>
                                    <select class="form-select" id="select-bus">
                                        each bus in buses
                                            <option value=`${bus.id}`>#{bus.busName} (#{bus.busNumber})</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mt-4">
                                <button type="submit" id="create-worker-account" class="btn btn-primary-custom w-100">
                                    <i class="fas fa-check me-2"></i>Create Account
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Bus Modal -->
        <div class="modal fade" id="addBus" tabindex="-1">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fw-bold">
                            <i class="fas fa-edit me-2"></i>Edit Bus Details
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <!-- Bus edit form content here - similar structure to add_bus.pug -->
                        <div id="bus_registration_details">
                            <!-- Form content would go here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    script(src="../../js/addBus.js")
    script(src="../../js/update_bus.js")
    script(src="../../js/deleteAxios.js")
    script(src="../../js/createWorkerAccount.js")
