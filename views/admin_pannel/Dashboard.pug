        script.
            async function onImageUpload(){
                const image = $("#image-input")[0].files[0];
                if (image) {
                    const imageUrl = URL.createObjectURL(image);
                    $("#image-display").attr("src", imageUrl).show();
                }
            }

            $(document).ready(function(){
                $("#image-input").on("change", onImageUpload);
            });
